{
  "datasources": [
    {
      "name": "Prometheus",
      "type": "prometheus",
      "url": "http://prometheus:9090",
      "access": "proxy",
      "isDefault": true,
      "basicAuth": false,
      "jsonData": {
        "httpMethod": "POST",
        "exemplarTraceIdDestinations": [
          {
            "name": "traceID",
            "datasourceUid": "tempo"
          }
        ]
      }
    },
    {
      "name": "Tempo",
      "type": "tempo",
      "uid": "tempo",
      "url": "http://tempo:3200",
      "access": "proxy",
      "basicAuth": false,
      "jsonData": {
        "httpMethod": "GET",
        "tracesToLogs": {
          "datasourceUid": "loki",
          "tags": ["job", "instance", "pod", "namespace"],
          "mappedTags": [
            {
              "key": "service.name",
              "value": "service"
            }
          ],
          "mapTagNamesEnabled": false,
          "spanStartTimeShift": "1h",
          "spanEndTimeShift": "1h",
          "filterByTraceID": false,
          "filterBySpanID": false
        },
        "tracesToMetrics": {
          "datasourceUid": "prometheus",
          "tags": [
            {
              "key": "service.name",
              "value": "service"
            },
            {
              "key": "job"
            }
          ],
          "queries": [
            {
              "name": "Sample query",
              "query": "sum(rate(tempo_spanmetrics_latency_bucket{}[5m]))"
            }
          ]
        },
        "nodeGraph": {
          "enabled": true
        }
      }
    }
  ]
}